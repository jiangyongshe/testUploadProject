.regis02-tit {
	left: 0;
	top: 0;
	width: 100%;
	padding: 12px 15px;
	color: #28a7e1;
    background-color: #0c2e51;
}
.regis02-mc {
	left: 10px;
	top: 35px;
	color: #333;
}
.regis02-yzm {
	right: 3px;
	top: 23px;
}
.regis02-bt {
	padding-bottom: 18px;
	border-bottom: 1px dashed #eee;
}
.regis03 {
	right: 0;
	top: 43px;
	bottom: 0;
	width: 300px;
	padding-top: 100px;
	background-color: #f3f3f3;
}
.tanchu-xynr {
	line-height: 21px;
}

@media (min-width: 1025px) and (max-width:1200px) {
    .clear.width, .regis01 {
        width: 1200px;
    }
}

@media (min-width: 320px) and (max-width:1024px) {
    .clear.width, .regis01 {
        width: 1024px;
    }
	.regis02 {
	   width: 1024px;
	   min-height: 500px;
	   padding: 75px 400px 50px 100px;
    }
}