.h-login {
	right: 0;
	top: 110px;
	bottom: 110px;
	z-index: 220;
	width: 300px;
	height: 330px;
	padding: 30px 25px 0;
	border-radius: 8px;
	border: 1px solid #ddd;
	background-color: rgba(255,255,255,.8);
}
.h-login-bt {
	width: 100%;
}
.h-login-tb {
	left: 0;
	top: 22px;
	width: 40px;
	height: 40px;
	line-height: 40px;
	text-align: center;
	color: #999;
}
.h-login .h-login-b a {
	display: inline-block;
	padding: 10px 8px;
}

/*登录注册*/
.login {
	height: 580px;
	background: url(../images/login-bg.jpg) center top no-repeat;
	position: relative;
	background-size: cover;
}
