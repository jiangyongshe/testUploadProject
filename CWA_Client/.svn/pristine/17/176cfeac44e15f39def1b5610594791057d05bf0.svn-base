$(function(){
	// 获取手机验证码按钮
	getVerification();
	// 提交按钮
	submit()
})


/**
 * 忘记密码页的提示
 */
function forgetPwdPageTip(str){
	$('#forgetPwdTip').html(str).show();
}

/**
 * 获取手机验证码按钮
 */
function getVerification(){
	$('#getVerification').on('click',function(){
		// 获取手机号
		var mobile = $('#mobile').val().trim();
		// 获取角色类型
		var userType = $('[name="userType"]:checked').val();
		// 发送请求
		jsonAjax('/'+language+'/user/getMobileVerification.do',{mobile:mobile,userType:userType},
		function(res){
			var msg = res.msg;
			if(msg=='10000'||msg=='60001'){
				var tip = res.data.split('-')[0];
				var time = Number(res.data.split('-')[1]);
				// 提示
				forgetPwdPageTip(tip);
				if(time>=0){
					$('#getVerification').removeClass('bg-green').val(time--);
				}
				// 启动倒计时
				var interval = setInterval(function() {
					if(time<0){
						$('#getVerification').addClass('bg-green').val('获取验证码');
						clearInterval(interval);
						return;
					}
					$('#getVerification').removeClass('bg-green').val(time--);
				}, 1000);
			}else{
				// 提示
				forgetPwdPageTip(msg);
			}
		},function(){});
	});
}

/**
 * 提交按钮
 * @returns
 */
function submit(){
	$('#submit').on('click',function(){
		// 获取手机号
		var mobile = $('#mobile').val().trim();
		// 获取验证码
		var verification = $('#verification').val().trim();
		// 获取角色类型
		var userType = $('[name="userType"]:checked').val();
		// 获取密码
		var pwd = $('#resetPwd').val().trim();
		// 发送请求
		jsonAjax('/'+language+'/user/forgetPwdToUpdate.do',{mobile:mobile,verification:verification,userType:userType,pwd:pwd},
		function(res){
			var msg = res.msg;
			if(msg=='10000'){
				forgetPwdPageTip(res.data);
				setTimeout(function() {
					window.location.href = '/'+language+'/forward/home.do';
				}, 3000);
			}else{
				// 提示
				forgetPwdPageTip(msg);
			}
		},function(){});
	});
}