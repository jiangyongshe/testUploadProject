var englishError=["register success"];
var twError=[];
var currError=[];
var mescroll,pageSize=9;

/*上拉加载的回调 page = {num:1, size:10}; num:当前页 从1开始, size:每页数据条数 */
function upCallback(page){
	//联网加载数据
	console.log("page.num="+page.num);
	loadRecommendAdvertiseInfo(page.num);
}

