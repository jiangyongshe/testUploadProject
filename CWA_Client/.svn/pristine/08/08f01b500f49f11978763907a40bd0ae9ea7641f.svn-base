body, html {
	height: 100%;
	color: #2badd7;
    background: -webkit-linear-gradient(#16355d, #2176a9); /* Safari 5.1 - 6.0 */
    background: -o-linear-gradient(#16355d, #2176a9); /* Opera 11.1 - 12.0 */
    background: -moz-linear-gradient(#16355d, #2176a9); /* Firefox 3.6 - 15 */
    background: linear-gradient(#16355d, #2176a9); /* 标准的语法 */
}
a {
	color: #2badd7;
	text-decoration: none;
}
a:hover {
	color: #2badd7;
	text-decoration: none;
}

