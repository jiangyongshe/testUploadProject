//初始化时间控件
function initDate(){
	var currYear = (new Date()).getFullYear();
	var opt = {};
	opt.date = {
		preset : 'date'
	};
	opt.datetime = {
		preset : 'datetime'
	};
	opt.time = {
		preset : 'time'
	};
	opt.def = {
		theme : 'android-ics light', //皮肤样式
		display : 'modal', //显示方式 
		mode : 'scroller', //日期选择模式
		dateFormat : 'yyyy-mm-dd',
		lang : 'zh',
		showNow : true,
		nowText : "今天",
		startYear : currYear - 50, //开始年份
		endYear : currYear + 10
	//结束年份
	};

	$(".beginTime").mobiscroll(
			$.extend(opt['date'], opt['def']));
	$(".endTime").mobiscroll(
			$.extend(opt['date'], opt['def']));
}
